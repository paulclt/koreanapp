{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "incremental",
    "composite": false,
    "incremental": true,
    "declaration": false,
    "declarationMap": false,
    "emitDeclarationOnly": false,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
